<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tên môn học (Bắt buộc)"
    android:textColor="@android:color/black"
    android:textStyle="bold" />

    <EditText
        android:id="@+id/edtSubjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Lập trình Android"
        android:inputType="textCapWords" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã lớp (Bắt buộc)"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/edtClassID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: IT3011"
        android:inputType="textCapCharacters" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:text="Giảng viên" />

    <EditText
        android:id="@+id/edtTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Thầy Nguyễn Văn A" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lưu môn học"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:backgroundTint="#AA1D2B" /> </LinearLayout>